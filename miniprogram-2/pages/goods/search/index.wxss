.search-page {
  box-sizing: border-box;
  width: 100vw;
  height: 100vh;
  padding: 0 30rpx;
}

/* 搜索栏 */
.search-section {
  display: flex;
  align-items: center;
  transform: translate(2%);
  margin-top: 20rpx;
}

.search-page .t-class__input-container {
  height: 90rpx;
  width:calc(100vw - 220rpx);
  border-radius: 24rpx;
  box-shadow: 0px 8px 16px 2px rgba(119, 154, 241, 0.2);
}

.search-page .t-search__input {
  font-size: 40rpx;
}

.search-button {
  width: 115rpx;
  height: 90rpx;
  border-radius: 40rpx;
  background: rgba(255, 235, 59, 1);
  box-shadow: 0px 8px 16px 2px rgba(119, 154, 241, 0.2);
}
.search-button:active{
  background-color: rgba(168, 132, 1, 0.637);
  transform: translateY(2rpx);
}

.search-icon{
  height: 60rpx;
  width: 60rpx;

  position: relative;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}


/* 历史搜索和热门搜索 */
.search-page .search-wrap {
  margin-top: 80rpx;
}

.search-page .history-wrap {
  margin-bottom: 68rpx;
}

.search-page .search-header {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items:flex-end;
  margin-bottom: 40rpx;
}

.search-page .search-title {
  font-size: 40rpx;
  font-weight: 600;
  font-family: PingFangSC-Semibold, PingFang SC;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
}

.search-page .search-clear {
  font-size: 30rpx;
  font-family: PingFang SC;
  line-height: 32rpx;
  color: #999999;
  font-weight: normal;
}

.search-page .search-content {
  overflow: hidden;
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
  align-items: flex-start;
  margin: 24rpx 0 0 5rpx;
}

.search-item-history {
  height: 60rpx;
  border-radius: 40rpx;
  background: rgba(255, 255, 255, 1);
  border: 2rpx solid rgba(0, 0, 0, 1);

  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(56, 56, 56, 1);
  padding: 10rpx 24rpx;

  margin: 0 24rpx 24rpx 0;
}

.search-page .hover-history-item {
  position: relative;
  top: 3rpx;
  left: 3rpx;
  box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.1) inset;
}