/* pages/seller/seller.wxss */

/* 卖家信息 */
.SellerInfo{
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}

.SellerDetails{
	width: 700rpx;
	height: 194rpx;

	border-radius: 20rpx;
	border: 1px solid rgba(0, 0, 0, 1);

	display: flex;
	flex-direction: column;
	justify-content: center;
	
}

.contact{
	font-size: 36rpx;
	font-weight: 400;

	padding: 20rpx 0 0 30rpx;
}

.tip{
	font-size: 32rpx;
	font-weight: 400;
	color: rgba(255, 141, 26, 1);

	padding: 15rpx 30rpx;
}

/* 宝贝和评价 */
.tabs-container{
	display: flex;
}

.tab{
	width: 325rpx;
	height: 100rpx;

	background: rgba(255, 235, 59, 0.22);
	border: 2rpx solid;
	border-radius: 40rpx;
	margin-top: 42rpx;

	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 48rpx;
	font-weight: 400;
}