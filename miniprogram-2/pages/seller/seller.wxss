/* 卖家信息 */
.header {
	width: 680rpx;
	margin: 20rpx;
	display: flex;
	align-items: center;
	justify-content: flex-start;
}

.SellerImg {
	width: 160rpx;
	height: 160rpx;
	border: 1rpx solid rgb(0, 0, 0);
	border-radius: 50%;
}

.SellerName {
	margin-left: 20rpx;

	font-size: 48rpx;
	font-weight: 400;
}


.SellerInfo {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}

.SellerDetails {
	width: 700rpx;
	height: 194rpx;

	border-radius: 20rpx;
	border: 1px solid rgba(0, 0, 0, 1);

	display: flex;
	flex-direction: column;
	justify-content: center;

}

.contact {
	font-size: 36rpx;
	font-weight: 400;

	padding: 20rpx 0 0 30rpx;
}

.tip {
	font-size: 32rpx;
	font-weight: 400;
	color: rgba(255, 141, 26, 1);

	padding: 15rpx 30rpx;
}

/* 宝贝 */
.goods-list-container{
	padding: 15rpx;
}

/* 评价列表 */
.comment-item{
	padding: 20rpx 40rpx;
}

.buyer-header{
	display: flex;
	align-items: center;
	margin-bottom: 10rpx;
}
.buyer-avatar{
	width: 90rpx;
	height: 90rpx;

	border-radius: 50%;
}
.buyer-name{
	font-size: 32rpx;
	font-weight: 400;
	color: rgba(128, 128, 128, 1);
	margin-left: 15rpx;
}

.comment-content{
	font-size: 28rpx;
	font-weight: 400;
	padding: 5rpx;
}

.comment-time{
	font-size: 24rpx;
	font-weight: 400;
	color: rgba(166, 166, 166, 1);
	margin-top: 5rpx;
}