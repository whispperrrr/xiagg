/* pages/usercenter/myposted/index.wxss */
page {
  background-color: #f5f5f5;
}

.myposted-container {
  padding-bottom: calc(env(safe-area-inset-bottom) + 100rpx);
}

.goods-container {
  background-color: #f5f5f5;
  padding-top: 20rpx;
}

.goods-list {
  margin: 0 20rpx;
}

.goods-item {
  margin-bottom: 20rpx;
  background-color: white;
  border-radius: 16rpx;
}

.goods-item-info {
  display: flex;
  padding: 24rpx;
  position: relative;
}

.goods-item-left {
  margin-right: 20rpx;
  margin-left: 12rpx;
}

.goods-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}

.goods-item-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-right: 60rpx;
}

.goods-title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
  margin-bottom: 12rpx;
}

.goods-status {
  font-size: 24rpx;
  color: #52c41a;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  background-color: rgba(82, 196, 26, 0.1);
  align-self: flex-start;
  margin-bottom: 12rpx;
}

.goods-status.sold-out {
  color: #999;
  background-color: rgba(0, 0, 0, 0.05);
}

.goods-price {
  display: flex;
  align-items: flex-end;
  color: #fa4126;
  font-size: 36rpx;
  font-weight: bold;
}

.price-class {
  font-size: 36rpx;
  color: #fa4126;
}

.delete-btn {
  position: absolute;
  right: 16rpx;
  top: 16rpx;
  width: 40rpx;
  height: 40rpx;
  padding: 12rpx;
}

.delete-icon {
  width: 100%;
  height: 100%;
}

.empty-wrapper {
  padding-top: 200rpx;
}

.empty-box {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 48rpx;
}

.post-btn {
  width: 240rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #ffeb3b;
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #333;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s ease-in-out;
}

.post-btn:active {
  transform: scale(0.95) translateY(2rpx);
  background-color: #fdd835;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}