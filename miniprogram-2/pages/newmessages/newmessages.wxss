/* 通知界面样式 */
.container {
  padding: 20px;
  background-color: #f8f8f8;
}

.message-item {
  display: flex;
  margin-bottom: 20px;
  background-color: #ffffff;
  border-radius: 10px;
  padding: 15px;
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
}

.message-icon {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon {
  width: 24px;
  height: 24px;
}

.message-content {
  flex: 1;
  margin-left: 15px;
}

.message-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.message-subtitle {
  font-size: 14px;
  color: #FF6347;
  margin-top: 5px;
}

.message-detail {
  font-size: 14px;
  color: #666;
  margin-top: 10px;
}

.message-time {
  font-size: 12px;
  color: #999;
  margin-top: 10px;
}

.message-action {
  margin-top: 15px;
}

.btn-view {
  padding: 10px 15px;
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}
